# === Agent World Configuration ===

# LLM Provider: "openai" | "groq"
# Groq is free tier and fast! Get key at https://console.groq.com
LLM_PROVIDER=groq

# OpenAI API Key (if using openai provider)
OPENAI_API_KEY=

# Groq API Key (if using groq provider â€” free!)
GROQ_API_KEY=gsk_...

# Monad RPC
MONAD_RPC_URL=https://rpc.monad.xyz

# Master wallet private key (for deploying contract + funding agent wallets)
# WARNING: Use a dedicated wallet, never your main wallet
MASTER_PRIVATE_KEY=0x...

# Smart contract address (set after deployment)
CONTRACT_ADDRESS=

# MySQL (WAMP)
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=
DB_NAME=agent_world

# Server
PORT=3000
HOST=0.0.0.0

# World settings
GRID_WIDTH=80
GRID_HEIGHT=55
TICK_INTERVAL_MS=5000
WORLD_SEED=42

# LLM settings (model auto-selected per provider if left empty)
# OpenAI default: gpt-4o-mini
# Groq default: llama-3.3-70b-versatile
# Other Groq models: llama-3.1-8b-instant, mixtral-8x7b-32768, gemma2-9b-it
LLM_MODEL=
LLM_MAX_TOKENS=200
